    <script>
        // Matrix rain effect
        const canvas = document.getElementById('matrix');
        const ctx = canvas.getContext('2d');

        canvas.width = window.innerWidth;
        canvas.height = window.innerHeight;

        const matrix = "ABCDEFGHIJKLMNOPQRSTUVWXYZ123456789@#$%^&*()*&^%+-/~{[|`]}";
        const matrixArray = matrix.split("");

        const fontSize = 10;
        const columns = canvas.width / fontSize;

        const drops = [];
        for(let x = 0; x < columns; x++) {
            drops[x] = 1;
        }

        function draw() {
            ctx.fillStyle = 'rgba(5, 5, 5, 0.04)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            ctx.fillStyle = '#00ff41';
            ctx.font = fontSize + 'px monospace';

            for(let i = 0; i < drops.length; i++) {
                const text = matrixArray[Math.floor(Math.random() * matrixArray.length)];
                ctx.fillText(text, i * fontSize, drops[i] * fontSize);

                if(drops[i] * fontSize > canvas.height && Math.random() > 0.975) {
                    drops[i] = 0;
                }
                drops[i]++;
            }
        }

        setInterval(draw, 35);

        window.addEventListener('resize', () => {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        });

        // Fraud detection demo
        const API_URL = 'https://tuboid-lanny-irrepleviable.ngrok-free.dev';

        async function testFraud(type) {
            const scenarios = {
                synthetic: {
                    name: "SYNTHETIC IDENTITY ATTACK",
                    ssn: "523-45-6789",
                    bank_routing_number: "031101169",
                    credit_score: 750,
                    credit_file_months: 18,
                    direct_deposits: [{description: "KRAKEN", amount: 3000}],
                    credit_request_amount: 25000,
                    zelle_enabled: true,
                    account_age_days: 45,
                    email_age_days: 30
                },
                llc: {
                    name: "LLC PAYROLL FRAUD",
                    ssn: "534-67-8901",
                    bank_routing_number: "041215663",
                    credit_score: 680,
                    credit_file_months: 24,
                    business_info: {
                        name: "Premium Solutions LLC",
                        state: "WY",
                        age_days: 10,
                        days_to_first_payroll: 2
                    },
                    credit_request_amount: 50000,
                    account_age_days: 60,
                    email_age_days: 15
                },
                warming: {
                    name: "ACCOUNT WARMING PATTERN",
                    ssn: "545-78-9012",
                    bank_routing_number: "073923033",
                    credit_score: 690,
                    credit_file_months: 36,
                    account_age_days: 31,
                    transactions: [
                        {amount: 5.50, merchant: "Starbucks"},
                        {amount: 12.00, merchant: "McDonald's"},
                        {amount: 25.00, merchant: "Shell"},
                        {amount: 8.99, merchant: "Netflix"},
                        {amount: 35.00, merchant: "Target"}
                    ],
                    credit_request_amount: 10000
                },
                legitimate: {
                    name: "LEGITIMATE CUSTOMER",
                    ssn: "567-90-1234",
                    bank_routing_number: "021000021",
                    credit_score: 680,
                    credit_file_months: 120,
                    account_age_days: 1500,
                    email_age_days: 2000,
                    direct_deposits: [],
                    credit_request_amount: 10000
                }
            };
            
            const scenario = scenarios[type];
            const resultDiv = document.getElementById('fraud-result');
            resultDiv.style.display = 'block';
            resultDiv.innerHTML = `
                <div style="color: #00ff41; margin-bottom: 20px; font-size: 14px;">
                    <strong>INITIALIZING ANALYSIS:</strong> ${scenario.name}
                </div>
                <div style="color: #666; font-size: 12px; line-height: 1.8;">
                    [>] Loading threat intelligence database...<br>
                    [>] Analyzing routing patterns...<br>
                    [>] Checking velocity indicators...<br>
                    [>] Scanning income sources...<br>
                    [>] Evaluating risk vectors...
                </div>
            `;
            
            try {
                const response = await fetch(`${API_URL}/api/detect`, {
                    method: 'POST',
                    headers: {'Content-Type': 'application/json'},
                    body: JSON.stringify(scenario)
                });
                
                const data = await response.json();
                
                const color = data.decision === 'DENY' ? '#ff0040' : 
                             data.decision === 'MANUAL_REVIEW' ? '#ffaa00' : '#00ff41';
                
                setTimeout(() => {
                    resultDiv.innerHTML = `
                        <div style="display: grid; grid-template-columns: 300px 1fr; gap: 30px;">
                            <div>
                                <h3 style="color: ${color}; font-size: 28px; margin-bottom: 20px; font-family: 'Orbitron', sans-serif;">
                                    ${data.decision}
                                </h3>
                                <div style="background: #1a1a1a; padding: 20px; border-left: 4px solid ${color};">
                                    <div style="color: #666; font-size: 11px; margin-bottom: 5px; text-transform: uppercase; letter-spacing: 1px;">Risk Assessment</div>
                                    <div style="color: ${color}; font-size: 42px; font-weight: bold; font-family: 'Orbitron', sans-serif;">
                                        ${(data.risk_score * 100).toFixed(1)}%
                                    </div>
                                </div>
                            </div>
                            
                            <div>
                                ${data.patterns && data.patterns.length > 0 ? `
                                    <div style="margin-bottom: 20px;">
                                        <h4 style="color: #ff0040; margin-bottom: 15px; font-size: 14px; letter-spacing: 1px;">THREAT VECTORS IDENTIFIED</h4>
                                        ${data.patterns.map(p => `
                                            <div style="color: #ffaa00; margin-bottom: 10px; padding: 10px; background: rgba(255, 170, 0, 0.1); border-left: 3px solid #ffaa00; font-size: 13px;">
                                                <strong>[!]</strong> ${p}
                                            </div>
                                        `).join('')}
                                    </div>
                                ` : `
                                    <div style="color: #00ff41;">
                                        <h4 style="margin-bottom: 15px; font-size: 14px; letter-spacing: 1px;">VERIFICATION COMPLETE</h4>
                                        <div style="padding: 15px; background: rgba(0, 255, 65, 0.1); border-left: 3px solid #00ff41; font-size: 13px; line-height: 1.8;">
                                            [>] No threat patterns detected<br>
                                            [>] Traditional banking profile confirmed<br>
                                            [>] Credit history verified<br>
                                            [>] Identity validation passed
                                        </div>
                                    </div>
                                `}
                                
                                ${data.decision === 'DENY' ? `
                                    <div style="margin-top: 20px; padding: 20px; background: rgba(255, 0, 64, 0.2); border: 2px solid #ff0040;">
                                        <div style="color: #ff0040; font-size: 20px; margin-bottom: 8px; font-weight: bold;">ATTACK PREVENTED</div>
                                        <div style="color: #ffaa00; font-size: 16px;">Potential Loss Avoided: <strong>$${scenario.credit_request_amount.toLocaleString()}</strong></div>
                                    </div>
                                ` : ''}
                            </div>
                        </div>
                    `;
                }, 1500);
            } catch (error) {
                resultDiv.innerHTML = `
                    <div style="color: #ff0040;">
                        <h3>CONNECTION ERROR</h3>
                        <p style="color: #666; margin-top: 10px;">Cannot reach FraudGod API. Ensure services are running.</p>
                        <p style="color: #666; font-size: 12px; margin-top: 10px;">Debug: ${error.message}</p>
                    </div>
                `;
            }
        }
    </script>
</body>
</html>
